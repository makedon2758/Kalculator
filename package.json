{
  "name": "kalkulator-ciecia",
  "private": true,
  "version": "0.1.0",
  "main": "electron/main.js",
  "scripts": {
    "dev:renderer": "npm --prefix renderer run dev",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "concurrently -k -n RENDERER,ELECTRON \"npm run dev:renderer\" \"npm run dev:electron\"",

    "build:renderer": "npm --prefix renderer run build",
    "build": "npm run build:renderer"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "wait-on": "^8.0.0"
  },
  "build": {
    "nsis": {
      "license": "build/EULA.txt",
      "include": "build/installer.nsh"
    },
    "extraResources": [
      { "from": "build/THIRD-PARTY-NOTICES.txt", "to": "THIRD-PARTY-NOTICES.txt" }
    ]
  }
}
